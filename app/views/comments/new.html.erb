
<h1>New Comment -</h1>

<%= form_with model: @comment, url: post_comments_path  do |form| %>

    <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_field :body, class: "form-control", placeholder: "body" %>
    </div>
    <div class="mb-3">
    <%= form.submit "Add Comment", class:"btn btn-primary" %>
     </div>
<% end %>